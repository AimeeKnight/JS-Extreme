doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Foundation 5
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/css/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    .row
      .small-12.columns
        h1 Foundation 5 Template

    .row
      .small-4.columns
        input.expand#color
      .small-2.columns
        button.expand.tiny.radius#add-color Add Color
      .small-2.columns
        button.expand.tiny.radius#add-random Add Random
      .small-2.columns
        button.expand.tiny.radius#start Start
      .small-2.columns
        button.expand.tiny.radius.alert#stop Stop

    .row
      .small-12.columns
        #colors

    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/source/main.js')
    script.
      $(document).foundation()

